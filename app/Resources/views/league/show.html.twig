{% extends 'base.html.twig' %}

{% block body %}
    <h1>League</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ league.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ league.name }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('league_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('league_edit', { 'id': league.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
